<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputFragment">

    <!-- res/layout/fragment_input.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jarak (km)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etFuelConsumption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Konsumsi bahan bakar (km/l)"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etFuelPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga bahan bakar (per liter)"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung Biaya" />

        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Daftar Perjalanan" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>